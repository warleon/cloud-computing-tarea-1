[Unit]
Description=Flask App Service
After=network.target

[Service]
User=flaskuser
Group=flaskuser
WorkingDirectory=/home/flaskuser/cloud-computing-tarea-1/app
ExecStart=/home/flaskuser/cloud-computing-tarea-1/app/start_app.sh
Restart=always
Environment="PATH=/usr/bin"


[Install]
WantedBy=multi-user.target
